<script>
function selectVehicle(name, element) {
    document.querySelectorAll('.vehicle-grid:not(#category-grid) .vehicle-box')
        .forEach(box => box.classList.remove('vehicle-selected'));

    element.classList.add('vehicle-selected');
    document.getElementById('vehicle_model').value = name;
}

function selectCategory(name, element) {
    document.querySelectorAll('#category-grid .vehicle-box')
        .forEach(box => box.classList.remove('vehicle-selected'));

    element.classList.add('vehicle-selected');
    document.getElementById('category').value = name;
}
</script>

